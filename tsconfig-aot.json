{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true
  },

  "files": [
    "src/app/app.module.ts",
    "src/app/main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "aot",
    "noImplicitAny": false,
    "skipMetadataEmit" : true
  }
}
